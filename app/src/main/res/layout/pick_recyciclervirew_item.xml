<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp">


    <ImageView
        android:id="@+id/logo_team_1"
        android:layout_width="@dimen/teams_icons_dimens"
        android:layout_height="@dimen/teams_icons_dimens"
        android:background="@drawable/background_round_corners"
        android:src="@drawable/logo_lec"
        app:layout_constraintEnd_toStartOf="@+id/icon_vs1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_match_timer" />

    <ImageView
        android:id="@+id/opacity_team_1"
        android:layout_width="@dimen/teams_icons_dimens"
        android:layout_height="@dimen/teams_icons_dimens"
        android:src="@drawable/background_round_corners_black"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/icon_vs1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_match_timer" />


    <ImageView
        android:id="@+id/icon_vs1"
        android:layout_width="@dimen/vs_icons_dimens"
        android:layout_height="@dimen/vs_icons_dimens"
        android:paddingEnd="7dp"
        android:src="@drawable/vsv2"
        app:layout_constraintBottom_toBottomOf="@+id/logo_team_1"
        app:layout_constraintEnd_toStartOf="@+id/logo_team_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/logo_team_1"
        app:layout_constraintTop_toTopOf="@+id/logo_team_1" />

    <ImageView
        android:id="@+id/logo_team_2"
        android:layout_width="@dimen/teams_icons_dimens"
        android:layout_height="@dimen/teams_icons_dimens"
        android:background="@drawable/background_round_corners"
        android:src="@drawable/logo_lec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_vs1"
        app:layout_constraintTop_toBottomOf="@+id/textview_match_timer" />

    <ImageView
        android:id="@+id/opacity_team_2"
        android:layout_width="@dimen/teams_icons_dimens"
        android:layout_height="@dimen/teams_icons_dimens"
        android:src="@drawable/background_round_corners_black"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_vs1"
        app:layout_constraintTop_toBottomOf="@+id/textview_match_timer" />

    <TextView
        android:id="@+id/textview_match_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/simplex"
        android:text="17:00"
        android:textColor="@color/colorAccent"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/logo_team_2"
        app:layout_constraintStart_toStartOf="@+id/logo_team_1"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>