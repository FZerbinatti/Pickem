                            android:layout_height="30dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_info"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_automatic_elotracker"
                            app:layout_constraintStart_toEndOf="@+id/tv_automatic_elotracker"
                            app:layout_constraintTop_toTopOf="@+id/tv_automatic_elotracker" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_automatic_elotracker"
